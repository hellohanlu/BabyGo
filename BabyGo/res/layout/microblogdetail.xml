<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#24242424">
  <TextView 
  	android:id="@+id/mb_detail_username"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_margin="5dip"
  	android:textSize="25px"
  	/>
  <EditText
  	android:id="@+id/mb_detail_content"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:padding="5dip"
  	android:editable="false"
  	android:textSize="20px"
  	/>
  <TextView 
  	android:id="@+id/mb_detail_time"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_margin="5dip"
  	android:layout_gravity="right"
  	/>
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal">
  	<Button
  		android:id="@+id/mb_detail_transmit"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:text="@string/mb_detail_transmit"
  		android:layout_weight="1"
  		/>
  	<Button
  		android:id="@+id/mb_detail_collection"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:text="@string/mb_detail_collection"
  		android:layout_weight="1"
  		/>
  </LinearLayout>
</LinearLayout>