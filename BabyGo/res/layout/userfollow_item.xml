<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageView 
		android:id="@+id/uf_userPhoto"
		android:layout_width="50px" 
		android:layout_height="50px"
		android:src="@drawable/user_headphoto2" 
		android:layout_margin="8px">
	</ImageView>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:paddingLeft="0px" 
		android:paddingRight="5px"
		android:layout_marginTop="5px" 
		android:layout_marginBottom="5px">
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2px"
			android:layout_marginLeft="2px"
			android:orientation="horizontal">
			<TextView 
				android:id="@+id/uf_username"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="20px" 
				android:textColor="#424952"
				android:layout_weight="1">
			</TextView>
			<TextView 
				android:id="@+id/uf_userage"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="20px" 
				android:textColor="#424952"
				android:layout_weight="1">
			</TextView>
			<TextView 
				android:id="@+id/uf_lastlogintime"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#f7a200"
				android:textSize="12px"
				android:layout_weight="1">
			</TextView>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5px"
			android:layout_marginLeft="2px"
			android:orientation="horizontal">
			<TextView 
				android:id="@+id/uf_mbcount"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="20px" 
				android:textColor="#dd2222"
				android:layout_weight="1">
			</TextView>
			<TextView 
				android:id="@+id/uf_idolcount"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textSize="20px" 
				android:textColor="#dd2222"
				android:layout_weight="1">
			</TextView>
			<TextView 
				android:id="@+id/uf_fanscount"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#dd2222"
				android:textSize="20px"
				android:layout_weight="1">
			</TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>